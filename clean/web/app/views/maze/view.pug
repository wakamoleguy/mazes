html
    head
        
            meta(charset="utf-8")
            meta(name="description" content="A simple maze editor")
            meta(name="viewport" content="width=device-width")
            
            title Maze editor
            
            // TODO - Stylesheets within app directory
            link(rel="stylesheet" href="../../css/main.css")
                
    body
        
        header
            h1= maze.name
            
            p Size #{maze.size}
            
        main
            
            section
                h2 Revisions
                ol.revisions
                    each revision in maze.revisions
                        li
                            a(href=`./revision/${revision.id}/`)= revision.version
                
                a(href="../../") Back to List
                
        footer
            
        script
            | window.app = {};
        
        script(src="../../../js/editor/store.js")
        script(src="../../../js/editor/tile.js")
        script(src="../../../js/editor/maze.js")
        script(src="../../../js/editor/editor.js")
