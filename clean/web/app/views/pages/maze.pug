html
    head
        meta(charset="utf-8")
        meta(name="description" content="A simple maze editor")
        meta(name="viewport" content="width=device-width")
        
        title Maze editor
        
        // TODO - Stylesheets within app directory
        link(rel="stylesheet" href="css/main.css")

    body
        
        header
            h1 Maze Editor
            
        main
            include /user/show.pug
            
            section(id="maze-list")
                
                a(href="./create/") Create a New Maze
                
                each maze in mazes
                    include /maze/show.pug
        footer
            
        script(type="module" src="js/list/main.js")
        script(src="js/maze_viewer.js")
